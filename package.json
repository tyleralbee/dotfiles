{
    "name": "dotfiles",
    "version": "0.2.0",
    "description": "Configuration files for the things that I use (primarily on an Arch Linux desktop).",
    "type": "module",
    "scripts": {
        "format": "pnpm run \"/^format-.*/\"",
        "format-json": "prettier --write '**/*.json'",
        "format-md": "prettier --write '**/*.md'",
        "format-sh": "prettier --write '.bash_aliases' '.bash_functions' '.bash_profile' '.bashrc'",
        "format-toml": "prettier --write '**/*.toml'"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
        "@prettier/plugin-oxc": "^0.1.3",
        "@prettier/plugin-xml": "^3.4.2",
        "prettier": "^3.8.1",
        "prettier-plugin-ember-template-tag": "^2.1.3",
        "prettier-plugin-jsdoc": "^1.8.0",
        "prettier-plugin-packagejson": "^3.0.0",
        "prettier-plugin-sh": "^0.18.0",
        "prettier-plugin-sql-cst": "^0.18.0",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "prettier-plugin-toml": "^2.0.6",
        "typescript": "^5.9.3"
    },
    "packageManager": "pnpm@10.29.3"
}
