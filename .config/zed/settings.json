{
    "active_pane_modifiers": { "inactive_opacity": 0.75 },
    "agent": { "use_modifier_to_send": true },
    "autosave": { "after_delay": { "milliseconds": 1000 } },
    "base_keymap": "VSCode",
    "buffer_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_size": 12,
    "collaboration_panel": { "button": false },
    "current_line_highlight": "gutter",
    "diagnostics": { "button": false },
    "edit_predictions": {
        "provider": "copilot",
        "enabled_in_text_threads": true,
        "copilot": { "enable_next_edit_suggestions": false }
    },
    "file_types": {
        "env": [".env*"],
        "Hyprland Config": ["**/hypr/*.conf"],
        "JSON": [".prettierrc"]
    },
    "git": { "inline_blame": { "show_commit_summary": true } },
    "git_panel": { "tree_view": true, "dock": "right" },
    "languages": {
        "env": { "show_edit_predictions": false },
        "JSONC": {
            "formatter": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--stdin-filepath",
                        "{buffer_path}",
                        "--tab-width",
                        "4"
                    ]
                }
            }
        },
        "LOG": { "show_edit_predictions": false },
        "Markdown": { "soft_wrap": "editor_width" }
    },
    "notification_panel": { "button": false },
    "preview_tabs": { "enable_keep_preview_on_code_navigation": true },
    "project_panel": {
        "auto_fold_dirs": false,
        "entry_spacing": "standard",
        "folder_icons": false,
        "hide_root": true,
        "indent_guides": { "show": "never" },
        "indent_size": 10,
        "sticky_scroll": false
    },
    "search": {
        "button": false,
        "case_sensitive": true,
        "regex": false,
        "whole_word": false
    },
    "soft_wrap": "none",
    "tab_bar": {
        "show_nav_history_buttons": false,
        "show_tab_bar_buttons": false
    },
    "tab_size": 4,
    "tabs": { "git_status": true, "show_diagnostics": "all" },
    "telemetry": { "diagnostics": true, "metrics": false },
    "terminal": {
        "button": false,
        "font_family": "JetBrainsMono Nerd Font",
        "font_size": 12
    },
    "theme": { "mode": "system", "light": "Ayu Light", "dark": "Ayu Dark" },
    "title_bar": { "show_project_items": false, "show_user_picture": false },
    "toolbar": { "breadcrumbs": false, "quick_actions": false },
    "ui_font_family": "JetBrainsMono Nerd Font",
    "ui_font_size": 12,
    "use_autoclose": false,
    "use_smartcase_search": true,
    "vim": {
        "highlight_on_yank_duration": 100,
        "use_smartcase_find": true,
        "use_system_clipboard": "always",
        "toggle_relative_line_numbers": true
    },
    "vim_mode": true
}
